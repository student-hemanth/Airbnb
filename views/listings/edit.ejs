<% layout ("/Layouts/bolierplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit the Listing</h3>
    <form method="POST" action="/listings/<%=listing._id %>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" value="<%=listing.title %>" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
            <lable for="Description" class="form-label">Description</lable>
            <textarea name="listing[description]" class="form-control"><%=listing.description %> required</textarea>
            <div class="valid-feedback">Description must be valid</div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">image url</lable>
            <input name="listing[image]" value="<%=listing.image %>" type="text" class="form-control" required>
            <div class="valid-feedback">image link must be valid</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">price</lable>
                <input name="listing[price]" value="<%=listing.price %>" type="number" class="form-control" required>
                <div class="valid-feedback">Price must be valid</div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">country</lable>
                <input name="listing[country]" value="<%=listing.country %>" type="text" class="form-control" required>
                <div class="valid-feedback">Country must be valid</div>
            </div>
        </div>
        <div class="mb-3">
            <lable for="location" class="form-label">location</lable>
            <input name="listing[location]" value="<%=listing.location %>" type="text" class="form-control" required>
            <div class="valid-feedback">location must be valid</div>
        </div>
        
        <button class="btn btn-dark mb-3 add-btn mt-3">save</button>
        
    </form>
</div>
</div>    
    
</body>
</html>